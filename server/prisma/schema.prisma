generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

model Hotel {
  id             Int            @id @default(autoincrement())
  name           String
  slug           String         @unique
  users          User[]
  roomCategories RoomCategory[]
  rooms          Room[]
  guests         Guest[]
  bookings       Booking[]
}

model User {
  id           Int     @id @default(autoincrement())
  email        String  @unique
  passwordHash String
  status       String  @default("ACTIVE")
  role         Role    @relation(fields: [roleId], references: [id])
  roleId       Int
  hotel        Hotel?  @relation(fields: [hotelId], references: [id])
  hotelId      Int?
}

model RoomCategory {
  id        String   @id @default(uuid())
  hotelId   Int
  name      String
  basePrice Int
  capacity  Int
  amenities String?
  createdAt DateTime @default(now())

  hotel Hotel  @relation(fields: [hotelId], references: [id])
  rooms Room[]

  @@unique([hotelId, name])
}

model Room {
  id         String     @id @default(uuid())
  hotelId    Int
  categoryId String
  roomNumber String
  floor      String?
  status     String     @default("AVAILABLE")
  createdAt  DateTime   @default(now())

  hotel    Hotel        @relation(fields: [hotelId], references: [id])
  category RoomCategory @relation(fields: [categoryId], references: [id])
  bookings Booking[]

  @@unique([hotelId, roomNumber])
}

model Guest {
  id        String   @id @default(uuid())
  hotelId   Int
  firstName String
  lastName  String
  email     String?
  phone     String
  idType    String?
  idNumber  String?
  createdAt DateTime @default(now())

  hotel    Hotel     @relation(fields: [hotelId], references: [id])
  bookings Booking[]

  @@unique([hotelId, phone])
}


model Booking {
  id        String   @id @default(uuid())
  hotelId   Int
  guestId   String
  roomId    String
  checkIn   DateTime
  checkOut  DateTime
  status    String   @default("BOOKED")
  createdAt DateTime @default(now())

  hotel Hotel @relation(fields: [hotelId], references: [id])
  guest Guest @relation(fields: [guestId], references: [id])
  room  Room  @relation(fields: [roomId], references: [id])
}
